<LinearLayout xmlns:android= "http://schemas.android.com/apk/res/android"
    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/rblack_grid_thick_lines_shop_preview"
    tools:context=".MainActivity"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO-DO LIST"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="76sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="New item"
            android:textAppearance="@android:color/background_light"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btAdd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Add" />
    </RelativeLayout>

    <TextView
        android:id="@+id/to_do_list"
        android:layout_width="match_parent"
        android:layout_height="702dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />

</LinearLayout>
